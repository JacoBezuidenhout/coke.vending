<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.cocacola" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:name="com.application.cocacola.ValueContainer"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TeamMemberOneViewEmoji"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".TeamMemberTwoViewEmoji"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".TeamMemberOnePhrase"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".TeamMemberTwoPhrase"
            android:screenOrientation="portrait"></activity>
    </application>
</manifest>
